<article>
  <h1 id='header1'>{{ page.title }}</h1>
  <hr id='title_line'>
  <div>
    <ul id="post-list" class="post-list">
      {% for post in site.posts %}
        {% if post.categories contains page._name %}
          <a href="{{site.baseurl}}{{post.url}}"> {{ post.title }}  </a> <br>
          {{ post.date | date: "%F" }} <br>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</article>
